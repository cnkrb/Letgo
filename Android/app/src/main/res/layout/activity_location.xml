<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gri"
    tools:context=".activities.LocationActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/exit"
        android:layout_alignParentTop="true"
        android:background="@drawable/selector"
        android:layout_height="wrap_content"
        android:src="@drawable/close"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/location"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:text="ADRES BİLGİLERİNİZİ SEÇİNİZ"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/car"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/city"
            android:background="@drawable/selector_white"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="3dp"
                android:src="@drawable/buildings" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Şehrini Seç"
                android:textColor="#000"
                android:id="@+id/textCity"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center|left"

                android:textColor="#FF1744"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/arrow" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/car"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_white"
            android:orientation="horizontal"
            android:id="@+id/town"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="3dp"
                android:src="@drawable/infrastructure" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:id="@+id/textTown"
                android:text="İlçeni Seç"
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center|left"

                android:textColor="#FF1744"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/arrow" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/car"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_white"
            android:orientation="horizontal"
            android:id="@+id/district"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="3dp"
                android:src="@drawable/village" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:id="@+id/textDistrict"
                android:text="Mahalleni Seç"
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center|left"

                android:textColor="#FF1744"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/arrow" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>